@model IList<MvcApplication3.Models.Role>
@{
    ViewBag.Title = "Roles";
}

<h2>Role</h2>
<p>
    @foreach (var role in Model)
    {
        <div class="item">
            <span class="id">
                @role.ID
            </span>
            <span class="name">
                @role.Name
            </span>
            <span class="Code">
                @role.Code
            </span>
        </div>
    }
</p>